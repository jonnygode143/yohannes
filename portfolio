<script>
  // Profile picture upload preview
  const uploadInput = document.getElementById('profileUpload');
  const previewImg = document.getElementById('profilePreview');

  uploadInput.addEventListener('change', () => {
    const file = uploadInput.files[0];
    if(file){
      previewImg.src = URL.createObjectURL(file);
    }
  });

  // Dynamic experience section
  const experienceList = document.getElementById('experienceList');
  function addExperience() {
    const expDiv = document.createElement('div');
    expDiv.className = 'experience-item';
    
    const jobInput = document.createElement('input');
    jobInput.type = 'text';
    jobInput.placeholder = 'Job Title or Description';
    
    const fileInput = document.createElement('input');
    fileInput.type = 'file';
    fileInput.accept=".pdf,.doc,.docx,.jpg,.png";
    
    const label = document.createElement('span');

    fileInput.addEventListener('change', () => {
      const fileName = fileInput.files[0]?.name;
      if(fileName){
        label.textContent = `Uploaded: ${fileName}`;
      }
    });

    expDiv.appendChild(jobInput);
    expDiv.appendChild(fileInput);
    expDiv.appendChild(label);

    experienceList.appendChild(expDiv);
  }

  // Professional Experience Table
  const profExpTable = document.getElementById('professionalExperience').getElementsByTagName('tbody')[0];

  function addProfessionalExperienceRow() {
    const row = document.createElement('tr');
    ['Date', 'Region', 'Company', 'Position'].forEach(() => {
      const td = document.createElement('td');
      const input = document.createElement('input');
      input.type = 'text';
      input.placeholder = 'Enter here';
      td.appendChild(input);
      row.appendChild(td);
    });
    profExpTable.appendChild(row);
  }
</script>

